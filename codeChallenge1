<style>
    div {
        position: absolute;
        height:100px;
        width: 100px;
        background-color: blue;
        left: 100px;
        top: 100px;
    }
</style>
<div>

</div>

<script>
    var test = true;
    document.querySelector('div').addEventListener('click', function(e){
        
        (test ? document.querySelector('div').style.backgroundColor = 'red' : document.querySelector('div').style.backgroundColor = 'blue', test = !test);
        
    })
</script>
